{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // 优先处理静态文件，启用缓存
    {
      "src": "/static/(.*)",
      "dest": "frontend/dist/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/assets/(.*)",
      "dest": "frontend/dist/assets/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    // API路由
    {
      "src": "/api/(.*)",
      "dest": "server.js",
      "headers": {
        "Cache-Control": "no-store, max-age=0"
      }
    },
    // 健康检查路由
    {
      "src": "/health",
      "dest": "server.js"
    },
    // 主页路由
    {
      "src": "^/$",
      "dest": "frontend/dist/index.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    // 其他所有路由通过前端处理
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "outputDirectory": "frontend/dist",
  "env": {
    "NODE_ENV": "production"
  },
  "buildEnv": {
    "NODE_ENV": "production"
  },
  "settings": {
    "memory": 1024,
    "maxDuration": 60
  }
}